extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='messageTitle') Title:
      input#messageTitle.form-control(type='text', name='messageTitle' maxLength="50")
    div.form-group
      label(for='messageText') Message:
      input#messageText.form-control(type='text', name='messageText')
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg

    