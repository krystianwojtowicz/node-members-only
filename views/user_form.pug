extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='username') User:
      input#username.form-control(type='text', placeholder='Krystian etc.' name='username' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='text', placeholder='password' name='password' value=(undefined===user ? '' : user.password))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg